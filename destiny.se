# Map movement controls to the left stick
w = leftY-
a = leftX-
s = leftY+
d = leftX+

space = X
r = square
tab = triangle

leftMouse = R2
rightMouse = L2

x = L1
shift = R1

up = dpadUp
left = dpadLeft
right = dpadRight
down = dpadDown

p = PS
t = touchpad

escape = O

# Map mouse to the right stick
mouseLook.type = linear
mouseLook.stick = right
mouseLook.multY = -1
mouseLook.deadZone = .05
mouseLook.decay = 5
